---
import type { Page } from "astro";
import type { CollectionEntry } from "astro:content";
import BaseLayout from './BaseLayout.astro';
import PostList from '../components/PostList.astro';
import PageHeader from '../components/PageHeader.astro';
import Icon from '../components/Icon.astro';

interface Props {
	page: Page<CollectionEntry<"posts">> | undefined;
	title: string;
	description?: string;
}

const { page, title, description } = Astro.props;

if (!page) {
	throw new Error("No page data provided");
}
---

<BaseLayout title={title + ' | ' + 'liruifengv'} description={description}>
	<div class="wrapper">
		<PageHeader title={title} />

		<div class="posts-section">
			<PostList posts={page.data} />

				<!-- Pagination -->
				{(page.url.prev || page.url.next) && (
					<nav class="pagination" aria-label="Pagination">
						{page.url.prev ? (
							<a href={page.url.prev} class="pagination-link prev" aria-label="Previous page">
								<Icon icon="arrow-left" size="1.25em" />
								<span>上一页</span>
							</a>
						) : (
							<span class="pagination-link disabled">
								<Icon icon="arrow-left" size="1.25em" />
								<span>上一页</span>
							</span>
						)}

						<span class="pagination-info">
							{page.currentPage} / {page.lastPage}
						</span>

						{page.url.next ? (
							<a href={page.url.next} class="pagination-link next" aria-label="Next page">
								<span>下一页</span>
								<Icon icon="arrow-right" size="1.25em" />
							</a>
						) : (
							<span class="pagination-link disabled">
								<span>下一页</span>
								<Icon icon="arrow-right" size="1.25em" />
							</span>
						)}
					</nav>
				)}
			</div>
		</div>
</BaseLayout>

<style>
	.posts-section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	/* Pagination */
	.pagination {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.pagination-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.75rem 1.25rem;
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--foreground);
		background: var(--muted);
		border: 1px solid var(--border);
		border-radius: var(--radius-full);
		text-decoration: none;
		transition: all var(--hover-transition);
	}

	.pagination-link:hover:not(.disabled) {
		background: var(--primary);
		color: var(--primary-foreground);
		border-color: var(--primary);
	}

	.pagination-link.disabled {
		opacity: 0.4;
		cursor: not-allowed;
	}

	.pagination-info {
		padding: 0.5rem 1rem;
		font-size: var(--text-sm);
		color: var(--muted-foreground);
	}
</style>
