---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHeader from '../components/PageHeader.astro';

const projects = [
  {
    title: 'Astro',
    description: '为内容驱动网站而设计的 Web 开发框架。',
    link: 'https://github.com/withastro/astro'
  },
  {
    title: 'Starlight',
    description: '基于 Astro 的文档网站开发框架。',
    link: 'https://github.com/withastro/starlight'
  },
  {
    title: 'We Drawing',
    description: 'AI 画图。每天一句中国古诗词，生成 AI 图片。',
    link: 'https://github.com/liruifengv/we-drawing'
  },
  {
    title: 'astro-cn.com',
    description: 'Astro 中文网站 Showcase。展示一些使用 Astro 构建的中文网站！',
    link: 'https://github.com/liruifengv/astro-cn.com'
  },
  {
    title: 'liruifengv.com',
    description: '我的个人网站。本网站源码。',
    link: 'https://github.com/liruifengv/liruifengv.com'
  },
  {
    title: 'Astro First PR',
    description: '查找你在 Astro 项目贡献的第一个 PR。',
    link: 'https://github.com/liruifengv/astro-first-pr'
  },
  {
    title: 'todo-rs',
    description: 'Rust 开发的简易命令行 TODO LIST。',
    link: 'https://github.com/liruifengv/todo-rs'
  }
]
---

<BaseLayout title="我的项目 | liruifengv" description="我开发或维护的项目">
  <div class="wrapper">
    <PageHeader title="项目" description="我开发或维护的项目" />
    <section class="projects">
      {projects.map(project => (
        <a
          class="project-card"
          href={project.link}
          target="_blank"
          rel="noopener noreferrer"
        >
          <h2 class="project-title">{project.title}</h2>
          <p class="project-desc">{project.description}</p>
        </a>
      ))}
    </section>
  </div>
</BaseLayout>

<style>
  .projects {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.5rem;
    background: var(--background);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease-in-out;
  }

  .project-card:hover {
    transform: scale(1.05);
  }

  .project-title {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--foreground);
    margin: 0;
  }

  .project-desc {
    font-size: var(--text-sm);
    color: var(--muted-foreground);
    line-height: 1.5;
    margin: 0;
    flex: 1;
  }

  @media (min-width: 640px) {
    .projects {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
