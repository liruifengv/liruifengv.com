---
import Icon from './Icon.astro';
import { iconPaths } from './IconPaths';

const skills: {
  icon: keyof typeof iconPaths;
  title: string;
  description: string;
}[] = [
	{
		icon: 'terminal-window',
		title: 'Web 开发',
		description: '专注 Web 开发。使用 JS、Rust、Go。',
	},
	{
		icon: 'trophy',
		title: 'Astro',
		description: 'Astro 项目成员，中文文档维护翻译。',
	},
	{
		icon: 'strategy',
		title: 'AI',
		description: '正在学习并分享 AI Agent 开发',
	},
];
---

<section class="skills-container">
	{
		skills.map((skill, index) => (
			<div class="skill-card" style={`--card-index: ${index}`}>
				<div class="skill-icon-wrapper">
					<Icon icon={skill.icon} color="var(--primary)" size="1.75rem" />
				</div>
				<h3 class="skill-title">{skill.title}</h3>
				<p class="skill-description">{skill.description}</p>
			</div>
		))
	}
</section>

<style>
	.skills-container {
		display: grid;
		gap: 1.5rem;
	}

	.skill-card {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1.5rem;
		background: var(--muted);
		border: 1px solid var(--border);
		border-radius: var(--radius-2xl);
		transition: all var(--theme-transition);
	}

	/* Asymmetric border radius variants */
	.skill-card[style*='--card-index: 0'] {
		border-radius: var(--radius-3xl) var(--radius-lg) var(--radius-2xl) var(--radius-xl);
	}

	.skill-card[style*='--card-index: 1'] {
		border-radius: var(--radius-xl) var(--radius-2xl) var(--radius-lg) var(--radius-3xl);
	}

	.skill-card[style*='--card-index: 2'] {
		border-radius: var(--radius-lg) var(--radius-3xl) var(--radius-xl) var(--radius-2xl);
	}

	.skill-card:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.skill-icon-wrapper {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 3.5rem;
		height: 3.5rem;
		background: rgba(93, 112, 82, 0.1);
		border-radius: var(--radius-xl);
		transition: all var(--hover-transition);
	}

	.skill-card:hover .skill-icon-wrapper {
		background: var(--primary);
	}

	.skill-card:hover .skill-icon-wrapper :global(svg) {
		stroke: var(--primary-foreground) !important;
		fill: var(--primary-foreground) !important;
	}

	.skill-title {
		font-family: var(--font-brand);
		font-size: var(--text-xl);
		font-weight: 600;
		color: var(--foreground);
	}

	.skill-description {
		color: var(--muted-foreground);
		font-size: var(--text-base);
		line-height: 1.6;
	}

	@media (min-width: 50em) {
		.skills-container {
			grid-template-columns: repeat(3, 1fr);
			gap: 2rem;
		}

		.skill-card {
			padding: 2rem;
		}
	}
</style>
