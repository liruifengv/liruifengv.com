---
interface Props {
	href: string;
	variant?: 'primary' | 'secondary' | 'outline';
}

const { href, variant = 'primary' } = Astro.props;
---

<a class:list={['cta-button', variant]} href={href}>
	<slot />
</a>

<style>
	.cta-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		padding: 0.875rem 1.75rem;
		font-size: var(--text-base);
		font-weight: 600;
		line-height: 1.1;
		text-decoration: none;
		white-space: nowrap;
		border-radius: var(--radius-full);
		transition: all var(--theme-transition);
		cursor: pointer;
	}

	/* Primary variant - Moss green */
	.cta-button.primary {
		color: var(--primary-foreground);
		background: var(--primary);
		box-shadow: var(--shadow-soft);
	}

	.cta-button.primary:hover {
		transform: scale(1.05);
		box-shadow: 0 6px 24px -4px rgba(93, 112, 82, 0.25);
	}

	.cta-button.primary:active {
		transform: scale(0.98);
	}

	/* Secondary variant - Terracotta */
	.cta-button.secondary {
		color: var(--secondary-foreground);
		background: var(--secondary);
		box-shadow: var(--shadow-float);
	}

	.cta-button.secondary:hover {
		transform: scale(1.05);
		box-shadow: 0 6px 24px -4px rgba(193, 140, 93, 0.3);
	}

	.cta-button.secondary:active {
		transform: scale(0.98);
	}

	/* Outline variant */
	.cta-button.outline {
		color: var(--primary);
		background: transparent;
		border: 2px solid var(--primary);
		box-shadow: none;
	}

	.cta-button.outline:hover {
		color: var(--primary-foreground);
		background: var(--primary);
		transform: scale(1.05);
	}

	.cta-button.outline:active {
		transform: scale(0.98);
	}

	/* Larger size on desktop */
	@media (min-width: 50em) {
		.cta-button {
			padding: 1rem 2rem;
			font-size: var(--text-lg);
		}
	}

	/* Focus state */
	.cta-button:focus-visible {
		outline: none;
		box-shadow: 0 0 0 3px var(--background), 0 0 0 5px var(--primary);
	}
</style>
