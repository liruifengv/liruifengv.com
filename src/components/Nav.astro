---
import Icon from './Icon.astro';
import ThemeToggle from './ThemeToggle.astro';
import type { iconPaths } from './IconPaths';
import { SITE } from '../config';

/** Main menu items */
const textLinks: { label: string; href: string }[] = [
	{ label: '首页', href: '/' },
	{ label: '文章', href: '/posts/' },
	{ label: '标签', href: '/tags/' },
	{ label: '项目', href: '/projects/' },
	{ label: '友链', href: '/links/' },
	{ label: '关于', href: '/about/' },
];

/** Icon links to social media */
const iconLinks: { label: string; href: string; icon: keyof typeof iconPaths }[] = [
	{ label: 'GitHub', href: 'https://github.com/liruifengv', icon: 'github-logo' },
];
---

<nav class="nav-container">
	<div class="nav-inner">
		<!-- Logo -->
		<a href="/" class="logo-link">
			<img
				src="https://bucket.liruifengv.com/avatar-new.png"
				alt="liruifengv"
				class="logo-avatar"
			/>
			<span class="logo-text">{SITE.title}</span>
		</a>

		<!-- Mobile menu button -->
		<menu-button>
			<template>
				<button class="menu-button" aria-expanded="false">
					<span class="sr-only">Menu</span>
					<Icon icon="list" />
				</button>
			</template>
		</menu-button>

		<!-- Desktop Navigation Links (center) -->
		<div id="menu-content" class="menu-content">
			<ul class="nav-items">
				{
					textLinks.map(({ label, href }) => (
						<li>
							<a
								aria-current={Astro.url.pathname === href}
								class:list={[
									'nav-link',
									{
										active:
											Astro.url.pathname === href ||
											(href !== '/' && Astro.url.pathname.startsWith(href)),
									},
								]}
								href={href}
							>
								{label}
							</a>
						</li>
					))
				}
			</ul>

			<!-- Mobile menu footer -->
			<div class="menu-footer">
				<div class="socials">
					{
						iconLinks.map(({ href, icon, label }) => (
							<a href={href} class="social-link" target="_blank" rel="noopener noreferrer">
								<span class="sr-only">{label}</span>
								<Icon icon={icon} />
							</a>
						))
					}
				</div>
				<ThemeToggle />
			</div>
		</div>

		<!-- Right side actions -->
		<div class="nav-actions">
			{
				iconLinks.map(({ href, icon, label }) => (
					<a href={href} class="action-link" target="_blank" rel="noopener noreferrer">
						<Icon icon={icon} size="1.25em" />
					</a>
				))
			}
			<ThemeToggle />
		</div>
	</div>
</nav>

<script>
	class MenuButton extends HTMLElement {
		constructor() {
			super();

			this.appendChild(this.querySelector('template')!.content.cloneNode(true));
			const btn = this.querySelector('button')!;
			const menu = document.getElementById('menu-content')!;
			const mediaQueries = window.matchMedia('(min-width: 50em)');

			let isOpen = false;

			const setExpanded = (expand: boolean) => {
				isOpen = expand;
				btn.setAttribute('aria-expanded', expand ? 'true' : 'false');
				menu.classList.toggle('is-open', expand);
			};

			btn.addEventListener('click', () => setExpanded(!isOpen));

			const handleViewports = (e: MediaQueryList | MediaQueryListEvent) => {
				// On desktop, menu visibility is handled by CSS
				btn.hidden = e.matches;
				if (e.matches) {
					// Reset mobile menu state when switching to desktop
					setExpanded(false);
				}
			};

			handleViewports(mediaQueries);
			mediaQueries.addEventListener('change', handleViewports);
		}
	}
	customElements.define('menu-button', MenuButton);
</script>

<style>
	/* Navigation container */
	.nav-container {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 9999;
		padding: 1rem 1.5rem;
	}

	.nav-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		max-width: 60rem;
		margin: 0 auto;
		padding: 0.75rem 1.25rem;
		background: rgba(253, 252, 248, 0.8);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid rgba(222, 216, 207, 0.6);
		border-radius: var(--radius-xl);
		box-shadow: 0 4px 24px rgba(93, 112, 82, 0.08);
	}

	:global(.theme-dark) .nav-inner {
		background: rgba(26, 25, 21, 0.8);
		border-color: rgba(74, 68, 58, 0.6);
	}

	/* Logo styles */
	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.625rem;
		text-decoration: none;
		color: var(--foreground);
		font-family: var(--font-brand);
		font-weight: 700;
		font-size: var(--text-lg);
		transition: opacity var(--hover-transition);
	}

	.logo-link:hover {
		opacity: 0.8;
		color: var(--foreground);
	}

	.logo-avatar {
		width: 2.5rem;
		height: 2.5rem;
		border-radius: 50%;
		object-fit: cover;
		border: 2px solid var(--border);
	}

	.logo-text {
		display: none;
	}

	/* Menu button - Mobile */
	.menu-button {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		padding: 0;
		border: none;
		border-radius: var(--radius-lg);
		background: transparent;
		color: var(--foreground);
		font-size: 1.5rem;
		cursor: pointer;
		transition: background-color var(--hover-transition);
	}

	.menu-button:hover {
		background: var(--muted);
	}

	.menu-button[hidden] {
		display: none;
	}

	/* Hide menu-button wrapper on desktop */
	@media (min-width: 50em) {
		menu-button {
			display: none;
		}
	}

	/* Mobile menu content */
	.menu-content {
		display: none;
		position: absolute;
		top: calc(100% + 0.5rem);
		left: 1rem;
		right: 1rem;
		background: var(--background);
		border: 1px solid var(--border);
		border-radius: var(--radius-xl);
		box-shadow: 0 10px 40px rgba(93, 112, 82, 0.15);
		overflow: hidden;
	}

	.menu-content.is-open {
		display: block;
	}

	/* Navigation items */
	.nav-items {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
		list-style: none;
		padding: 1rem;
		margin: 0;
	}

	.nav-link {
		display: block;
		padding: 0.875rem 1rem;
		color: var(--muted-foreground);
		text-decoration: none;
		font-weight: 500;
		font-size: var(--text-base);
		border-radius: var(--radius-lg);
		transition: color var(--hover-transition), background-color var(--hover-transition);
	}

	.nav-link:hover {
		color: var(--foreground);
		background: var(--muted);
	}

	.nav-link.active {
		color: var(--primary);
		font-weight: 600;
	}

	/* Menu footer */
	.menu-footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem;
		border-top: 1px solid var(--border);
		background: var(--muted);
	}

	.socials {
		display: flex;
		gap: 0.5rem;
	}

	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 2.5rem;
		height: 2.5rem;
		color: var(--muted-foreground);
		border-radius: var(--radius-lg);
		transition: color var(--hover-transition), background-color var(--hover-transition);
	}

	.social-link:hover {
		background: var(--primary);
		color: var(--primary-foreground);
	}

	/* Right side actions - hidden on mobile */
	.nav-actions {
		display: none;
	}

	/* Desktop styles */
	@media (min-width: 50em) {
		.nav-container {
			padding: 1.25rem 2rem;
		}

		.nav-inner {
			display: grid;
			grid-template-columns: 1fr auto 1fr;
			padding: 0.625rem 1rem 0.625rem 1.25rem;
			border-radius: var(--radius-2xl);
		}

		.logo-text {
			display: block;
		}

		.menu-content {
			display: flex;
			position: static;
			justify-content: center;
			background: transparent;
			border: none;
			box-shadow: none;
		}

		.nav-items {
			flex-direction: row;
			gap: 0;
			padding: 0;
		}

		.nav-link {
			padding: 0.5rem 1rem;
			font-size: var(--text-sm);
			border-radius: var(--radius-lg);
		}

		.nav-link:hover {
			background: transparent;
			color: var(--primary);
		}

		.nav-link.active {
			background: transparent;
		}

		.menu-footer {
			display: none;
		}

		.nav-actions {
			display: flex;
			align-items: center;
			justify-self: end;
			gap: 0.5rem;
		}

		.action-link {
			display: flex;
			align-items: center;
			justify-content: center;
			width: 2.5rem;
			height: 2.5rem;
			color: var(--muted-foreground);
			border-radius: var(--radius-lg);
			transition: color var(--hover-transition), background-color var(--hover-transition);
		}

		.action-link:hover {
			color: var(--foreground);
			background: var(--muted);
		}
	}

	@media (forced-colors: active) {
		.nav-link.active {
			color: SelectedItem;
		}
	}
</style>
