---
export interface Props {
	name: string;
	count?: number;
}

const { name, count } = Astro.props;
---

<a
	href={`/tags/${name.toLowerCase()}`}
	transition:name={name.toLowerCase()}
	class="tag-link"
>
	<span class="tag">
		{name.toLowerCase()}
		{count && count > 0 && <span class="tag-count">({count})</span>}
	</span>
</a>

<style>
	.tag-link {
		text-decoration: none;
	}

	.tag {
		display: inline-flex;
		align-items: center;
		gap: 0.25rem;
		padding: 0.375rem 0.875rem;
		font-size: var(--text-sm);
		font-weight: 500;
		color: var(--primary);
		background: rgba(93, 112, 82, 0.1);
		border: 1px solid transparent;
		border-radius: var(--radius-full);
		white-space: nowrap;
		transition: all var(--hover-transition);
	}

	.tag:hover {
		background: var(--primary);
		color: var(--primary-foreground);
	}

	.tag-count {
		opacity: 0.7;
	}

	:global(.theme-dark) .tag {
		background: rgba(139, 163, 123, 0.15);
	}

	:global(.theme-dark) .tag:hover {
		background: var(--primary);
		color: var(--background);
	}
</style>
